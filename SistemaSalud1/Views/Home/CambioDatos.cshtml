
@{
    ViewBag.Title = "CambioDatos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <title>Cambio Datos </title>
</head>
<body>
    <div>
        <h3>Cambio De Datos</h3>
        @using (Html.BeginForm("ActualizarDatos", "Home", FormMethod.Post))
        {
            <form action="Paciente/Paciente" method="post">
                <table>
                    <tr>
                        <td><label>Ingrese su Identificación:</label></td>
                        <td><input type="text" name="id" value=" " /></td>
                    </tr>
                    <tr>
                        <td><input type="submit" name="Cambiar" value="Enviar" /></td>
                    </tr>
                </table>
            </form>
        }
    </div>
</body>
</html>

